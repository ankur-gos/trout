#include "oclib.oh"

void move (string src, string dst) {
   puts ("Move a disk from ");
   puts (src);
   puts (" to ");
   puts (dst);
   puts (".\n");
}

void towers (int ndisks, string src, string tmp, string dst) {
   if (ndisks < 1) return;
   towers (ndisks - 1, src, dst, tmp);
   move (src, dst);
   towers (ndisks - 1, tmp, src, dst);
}

towers (4, "Source", "Temporary", "Destination");

